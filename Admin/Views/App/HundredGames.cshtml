                                </div>
                            </div>
                            <div class="col-md-10" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <a href="#" class="btn btn-primary" onclick="history.go(0);"><i class="glyphicon glyphicon-repeat"></i>刷新</a>
                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th>ID</th>
                                        <td>房间名称</td>
                                        <td>库存起始值</td>
                                        <td>库存当前值</td>
                                        <td>库存衰减值(千分比)</td>
                                        <td>封顶送分概率(百分比)</td>
                                        <td>库存封顶值</td>
                                        <td>库存1</td>
                                        <td>库存2</td>
                                        <td>库存3</td>
                                        <td>库存4</td>
                                        <td>库存5</td>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">
                                    <div class="dataTables_paginate paging_bootstrap pagination" style="float:right;">
                                        <ul class="pagination" id="pagin"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="AddAcc" style="display: none">
        <input type="hidden" id="ServerID">
        <input type="hidden" id="ServerName">
        <table width="99%" border="1" align="left" cellpadding="0" cellspacing="0" bordercolor="#C8C8C8">
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存起始值：</strong>
                    <input type="hidden" id="ServerID">
                </td>
                <td height="30" align="left" bgcolor="#FBFFFF">
                    <input id="Storage_Start" name="StorageStart" type="text" style="width:100px" maxlength="50"/>
                </td>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存当前值 ：</strong>
                </td>
                <td height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Current" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存衰减值：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Deduct" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>封顶送分概率：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Mul" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存封顶值：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Max" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="left" colspan="5" bgcolor="#FBFFFF">
                    <strong style="color:red">库存设置说明:0|100|50 库存在0-100区间内系统有额外50%概率赢,0|100|150 库存在0-100区间系统有额外50%概率输</strong>
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存1：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Control1" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存2：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Control2" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存3：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Control3" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存4：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Control4" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td height="30" align="right" bgcolor="#FBFFFF">
                    <strong>库存5：</strong>
                </td>
                <td id="CountsText" colspan="3" height="30" align="left" bgcolor="#FBFFFF">
                    <input type="text" id="Storage_Control5" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td colspan="4" align="center">
                    <input id="Button3" type="button" onclick="AddAcc()" class="btn" width="80" value="确认" />
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript">
        var pageObj = {};
        var postData = {};//搜索条件
        var list = [];
        $(document).ready(function () {
            docReady();
        });
        function docReady() {
            //加载数据
            postData.pageSize = parseInt($("#pagecount").val());
            postData.pageIndex = 1;
            AjaxSearch(postData);
            //收放事件
            $('.btn-minimize').click(function (e) {
                e.preventDefault();
                var $target = $(this).parent().parent().next('.box-content');
                if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                $target.slideToggle();
            });
            //选择页码
            $("#pagecount").change(function (e) {
                postData.pageSize = parseInt($(this).val());
                postData.pageIndex = 1;
                AjaxSearch(postData);
            });

        }
        //搜索事件
        function AjaxSearch(postData) {
            $('#pagin').paging("/App/GetHundredGames", postData, CreatTableBody, postData.pageIndex);
        }
        function StrToDateTime(timestr) {
            var dt = new Date(timestr.replace("-", "/").replace("-", "/"));
            return dt;
        }
        function isPositiveInteger(s) {//是否为正整数
            var re = /^[0-9]+$/;
            return re.test(s)
        }
        function isInteger(s) {//是否为整数
            var re = /^-?\d+$/;
            return re.test(s)
        }
        var AddAcc = function () {//StorageScore1: $("#StorageScore1").val(), StorageScore2: $("#StorageScore2").val(), StorageScore3: $("#StorageScore3").val(),StorageScore4: $("#StorageScore4").val(), StorageScore5: $("#StorageScore5").val(), StorageScore6: $("#StorageScore6").val(),StorageScore7: $("#StorageScore7").val(), StorageScore8: $("#StorageScore8").val(), StorageScore9: $("#StorageScore9").val(),StorageScore10: $("#StorageScore10").val(), StorageScore11: $("#StorageScore11").val(),

            var data = {};
            data.sid = $("#ServerID").val();
            data.name = $("#ServerName").val();
            var Storage_Start = $("#Storage_Start").val();
            var Storage_Current = $("#Storage_Current").val();
            var Storage_Deduct = $("#Storage_Deduct").val();
            var Storage_Mul = $("#Storage_Mul").val();
            var Storage_Max = $("#Storage_Max").val();
            var Storage_Control1 = $("#Storage_Control1").val();
            var Storage_Control2 = $("#Storage_Control2").val();
            var Storage_Control3 = $("#Storage_Control3").val();
            var Storage_Control4 = $("#Storage_Control4").val();
            var Storage_Control5 = $("#Storage_Control5").val();
            console.log(Storage_Start);
            if (!isPositiveInteger(Storage_Start)) {
                alert("库存起始值应为正数");
                return false;
            }
            if (!isInteger(Storage_Current)) {
                alert("库存当前值应为数字类型");
                return false;
            }
            if (!isPositiveInteger(Storage_Deduct)) {
                alert("库存衰减值应为正数");
                return false;
            }
            if (!isPositiveInteger(Storage_Mul)) {
                alert("封顶送分概率应为正数");
                return false;
            }
            if (!isPositiveInteger(Storage_Max)) {
                alert("库存封顶值应为正数");
                return false;
            }

            var reg = /^(\d+)\|(\d+)\|(\d+)$/;
            if (Storage_Control1 != "0")
            {
                if (!reg.test(Storage_Control1)) {
                    alert("库存设置格式必须为:*|*|* 格式");
                    return false;
                }
            }
            if (Storage_Control2 != "0") {
                if (!reg.test(Storage_Control2)) {
                    alert("库存设置格式必须为:*|*|* 格式");
                    return false;
                }
            }
            if (Storage_Control3 != "0") {
                if (!reg.test(Storage_Control3)) {
                    alert("库存设置格式必须为:*|*|* 格式");
                    return false;
                }
            }
            if (Storage_Control4 != "0") {
                if (!reg.test(Storage_Control4)) {
                    alert("库存设置格式必须为:*|*|* 格式");
                    return false;
                }
            }
            if (Storage_Control5 != "0") {
                if (!reg.test(Storage_Control5)) {
                    alert("库存设置格式必须为:*|*|* 格式");
                    return false;
                }
            }

            data.Storage_Start = Storage_Start;
            data.Storage_Current = Storage_Current;
            data.Storage_Deduct = Storage_Deduct;
            data.Storage_Mul = Storage_Mul;
            data.Storage_Max = Storage_Max;
            data.Storage_Control1 = Storage_Control1;
            data.Storage_Control2 = Storage_Control2;
            data.Storage_Control3 = Storage_Control3;
            data.Storage_Control4 = Storage_Control4;
            data.Storage_Control5 = Storage_Control5;
            AjaxSubmit("/App/AddHundredGames", data, callBack, "add");
        }


        function Show(i) {
            var item = list[i];
            OpObj = new OpeIframeWindow("AddAcc", "编辑库存配置", { autoOpen: true, height: 420, width: 600, modal: true }, true);
            $("#ServerID").val(item.ServerID);
            $("#ServerName").val(item.ServerName);
            $("#Storage_Start").val(item.Storage_Start);
            $('#Storage_Current').val(item.Storage_Current);
            $('#Storage_Deduct').val(item.Storage_Deduct);
            $('#Storage_Mul').val(item.Storage_Mul);
            $('#Storage_Max').val(item.Storage_Max);
            $('#Storage_Control1').val(item.Storage_Control1);
            $('#Storage_Control2').val(item.Storage_Control2);
            $('#Storage_Control3').val(item.Storage_Control3);
            $('#Storage_Control4').val(item.Storage_Control4);
            $('#Storage_Control5').val(item.Storage_Control5);
        }

        //回调函数
        function callBack(jsonData, fname) {
            if (fname == "add") {
                alert(jsonData.Msg);
                AjaxSearch(postData);
                OpObj.Close();
            } else {
                AjaxSearch(postData);
            }

        }
        function setOpen(sid, IsOpen, tid) {
            var data = {};
            if (confirm("你确定要此操作吗？")) {
                data.sid = sid;
                data.IsOpen = IsOpen;
                data.tid = tid;
                AjaxSubmit("/App/UpdateHundredGamesStute", data, callBack, "stu");
            }
        }
        //绑定数据
        function CreatTableBody(jsondata, pageTotal, pageCount, pageIndex) {
            var html = "";
            list = jsondata
            console.log(list);
            if (jsondata != null && jsondata.length > 0) {
                $.each(jsondata, function (i, item) {
                    html += "<tr>";
                    html += stringFormat("<td>{0}</td>", item.ServerID);
                    html += stringFormat("<td>{0}</td>", item.ServerName);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Start);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Current);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Deduct);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Mul);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Max);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Control1);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Control2);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Control3);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Control4);
                    html += stringFormat("<td><label>{0}</label><input style='display:none;' class='form-control input-sm' type='text' value='{0}'/></td>", item.Storage_Control5);
                    html += stringFormat("<td><a class=\"l\" href='#' onclick='Show({0});'>修改</a>" + "</td>", i, item.ServerID);
                    html += "</tr>";
                });
            }
            $("#DataTables_Table_0_wrapper tbody").html(html);
            $("#DataTables_Table_0_info").html(stringFormat("显示 {0} 至 {1} 共 {2} 条", ((pageIndex - 1) * postData.pageSize + 1), ((pageIndex * postData.pageSize) < pageTotal ? (pageIndex * postData.pageSize) : pageTotal), pageTotal));
        }
        //字符串格式化
        function stringFormat() {
            if (arguments.length == 0)
                return null;
            var str = arguments[0];
            for (var i = 1; i < arguments.length; i++) {
                var re = new RegExp('\\{' + (i - 1) + '\\}', 'gm');
                str = str.replace(re, arguments[i]);
            }
            return str;
        }
    </script>
</body>
</html>
